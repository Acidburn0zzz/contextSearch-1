{

  "manifest_version": 2,
  "name": "Context Search",
  "description": "Searches the selected text using a search engine from a pre-specified list",
  "version": "3.59",
  "author": "Olivier de Broqueville",
  "applications": {
    "gecko": {
        "id": "olivier.debroqueville@gmail.com"
    }
  },

  "content_security_policy" : "script-src 'self'; object-src 'self'; img-src 'self' https://get-favicons.herokuapp.com/*",

  "background": {
      "scripts": [
        "background.js",
        "sort.js"
      ]
  },

  "permissions": [
      "contextMenus",
      "storage",
      "tabs",
      "notifications"
  ],

  "omnibox": { 
    "keyword" : "cs" 
  },

  "icons": {
    "16": "icons/icon_16.png",
    "20": "icons/icon_20.png",
    "24": "icons/icon_24.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "64": "icons/icon_64.png",
    "128": "icons/icon_128.png",
    "256": "icons/icon_256.png",
    "512": "icons/icon_512.png"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["selection.js", "sort.js"]
    }
  ]

}
